{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "skipLibCheck": true,
        "lib": [ "es2017", "dom", "es6"],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "./"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "demo",
        "ng-demo"
    ]
}
